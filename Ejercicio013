import java.util.Scanner; // Importa la clase Scanner para leer la entrada del usuario
public class Ejercicio013 {
    public static void main(String[] args) {
        // Crea un objeto Scanner para obtener la entrada del usuario desde la consola
        Scanner scanner = new Scanner(System.in);

        // Inicializa la variable para acumular la suma de los números
        int sumaTotal = 0;

        System.out.println("Por favor, ingresa 5 números:");

        // Bucle para solicitar y sumar 5 números
        for (int i = 1; i <= 5; i++) {
            System.out.print("Ingresa el número " + i + ": ");
            int numero = scanner.nextInt(); // Lee el número ingresado por el usuario
            sumaTotal += numero; // Suma el número actual a la suma total
        }

        // Muestra la suma total de los números ingresados
        System.out.println("\nLa suma total de los 5 números ingresados es: " + sumaTotal);

        // Cierra el objeto Scanner para liberar recursos
        scanner.close();
    }
}
